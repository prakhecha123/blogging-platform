<h1 class="mb-4">All Posts</h1>

<%= form_with url: posts_path, method: :get, local: true, class: 'mb-4' do |form| %>
  <div class="input-group">
    <%= form.text_field :query, class: 'form-control', placeholder: 'Search...' %>
    <%= form.submit 'Search', class: 'btn btn-primary' %>
  </div>
<% end %>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="card mb-4">
      <div class="card-body">
        <h2 class="card-title"><%= link_to post.title, post, class: 'text-decoration-none' %></h2>
        <p class="card-text"><%= post.content.truncate(100) %></p>
        <p class="card-text">By <%= post.user.email %></p>
      </div>
    </div>
  <% end %>

  <%= paginate @posts, class: 'd-flex justify-content-center' %>
<% else %>
  <div class="alert alert-warning" role="alert">
    No records found.
  </div>
<% end %>